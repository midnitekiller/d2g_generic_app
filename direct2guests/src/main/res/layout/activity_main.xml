<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.direct2guests.d2g_tv.Activities.MainActivity">

    <RelativeLayout
        android:id="@+id/continueButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_lg2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:text="TextView"
            android:textColor="#fff"
            android:textSize="25sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/liveTxtView"
            android:layout_width="450dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/btn_transparent"
            android:fontFamily="monospace"
            android:text="Here shows the Live Information to be inputed..   And Some more Live FEED information will be shown here..."
            android:textSize="18sp"
            tools:layout_editor_absoluteX="420dp"
            tools:layout_editor_absoluteY="360dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="474dp"
            android:layout_height="466dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/welcomeTxtV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="cursive"
                android:text="@string/indexWelcome"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="#fff"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/guestNameTxtV"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/welcomeTxtV"
                android:fontFamily="cursive"
                android:text="@string/indexGuestName"
                android:textColor="#fff"
                android:textSize="35sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/hotelNameTxtV"
                android:layout_width="449dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="350dp"
                android:fontFamily="monospace"
                android:text="@string/indexHotelName"
                android:textAlignment="viewStart"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="286dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/btn_transparent"
                android:onClick="continueButton"
                android:text="@string/indexContinueButton"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/orange_transparent"
                android:textSize="14sp"
                android:typeface="normal" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/montebello"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
